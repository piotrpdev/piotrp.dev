---
import { twMerge } from "tailwind-merge";

const { target = "_blank", href, wrapperClass = "", ariaLabel } = Astro.props;
---

<a class:list={[
        twMerge("text-muted font-medium underline underline-offset-4 hover:text-gray-700 hover:underline dark:hover:text-gray-300 dark:text-gray-400", wrapperClass)
    ]}
    target={target}
    href={href}
    aria-label={ariaLabel}
>
    <slot />
</a>