---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features3 from '~/components/widgets/Features3.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact',
};

---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <Features3
  title="These are the way you can reach out to me"
  columns={3}
  isAfterContent={true}
  classes={{
    container: "md:my-8 lg:my-12"
  }}
  items={[
    {
      title: 'X (Twitter)',
      icon: 'tabler:brand-x',
      callToAction: {
        target: '_blank',
        text: 'Send me a DM »',
        href: 'https://twitter.com/piotrpdev',
        variant: 'link',
      },
      classes: {
        panel: "justify-center"
      }
    },
    {
      title: 'Email',
      icon: 'tabler:mail',
      callToAction: {
        target: '_blank',
        text: 'Send me an Email »',
        href: 'mailto:piotrpdev@gmail.com',
        variant: 'link',
      },
      classes: {
        panel: "justify-center"
      }
    },
    {
      title: 'LinkedIn',
      icon: 'tabler:brand-linkedin',
      callToAction: {
        target: '_blank',
        text: 'Send me a DM »',
        href: 'https://www.linkedin.com/in/piotrpdev/',
        variant: 'link',
      },
      classes: {
        panel: "justify-center"
      }
    },
  ]}
  />
</Layout>
